{
  "name": "cv-killer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron.cjs",
  "description": "A job application tracking system that manages your CVs, cover letters, and job applications with LaTeX document version control and customization.",
  "author": {
    "name": "Qervas",
    "email": "djmax96945147@outlook.com"
  },
  "scripts": {
    "dev": "vite dev",
    "dev:backend": "cross-env NODE_ENV=development nodemon server/index.js",
    "dev:frontend": "vite dev",
    "dev:check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "dev:check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "electron-dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "build": "vite build",
    "preview": "vite preview",
    "check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
    "check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
    "electron": "npm run build && electron .",
    "postbuild": "node scripts/copy-server.js",
    "preelectron-build": "node scripts/generate-cjs-server.js",
    "build-electron": "npm run preelectron-build && vite build && node scripts/copy-server.js && electron-builder",
    "build-electron-debug": "npm run preelectron-build && cross-env DEBUG=true vite build && node scripts/copy-server.js && electron-builder",
    "reset-data": "node scripts/reset-app-data.js",
    "electron-clean": "npm run reset-data && npm run electron"
  },
  "build": {
    "appId": "com.yourdomain.cvkiller",
    "productName": "CV Killer",
    "files": [
      "**/*",
      "build/**/*",
      "public/**/*",
      "server/**/*"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "app/server",
        "filter": [
          "**/*",
          "!node_modules/**/*"
        ]
      }
    ],
    "extraFiles": [
      {
        "from": "node_modules",
        "to": "app/node_modules",
        "filter": [
          "express/**/*",
          "cors/**/*",
          "fs-extra/**/*",
          "uuid/**/*",
          "object-assign/**/*",
          "body-parser/**/*",
          "path-to-regexp/**/*",
          "accepts/**/*",
          "content-type/**/*",
          "debug/**/*",
          "depd/**/*",
          "array-flatten/**/*",
          "bytes/**/*",
          "call-bind/**/*",
          "content-disposition/**/*",
          "cookie/**/*",
          "cookie-signature/**/*",
          "destroy/**/*",
          "ee-first/**/*",
          "encodeurl/**/*",
          "escape-html/**/*",
          "etag/**/*",
          "finalhandler/**/*",
          "fresh/**/*",
          "function-bind/**/*",
          "get-intrinsic/**/*",
          "has/**/*",
          "has-symbols/**/*",
          "http-errors/**/*",
          "iconv-lite/**/*",
          "inherits/**/*",
          "ipaddr.js/**/*",
          "media-typer/**/*",
          "merge-descriptors/**/*",
          "methods/**/*",
          "mime/**/*",
          "mime-db/**/*",
          "mime-types/**/*",
          "ms/**/*",
          "negotiator/**/*",
          "object-inspect/**/*",
          "on-finished/**/*",
          "parseurl/**/*",
          "proxy-addr/**/*",
          "qs/**/*",
          "range-parser/**/*",
          "raw-body/**/*",
          "safe-buffer/**/*",
          "safer-buffer/**/*",
          "send/**/*",
          "serve-static/**/*",
          "setprototypeof/**/*",
          "side-channel/**/*",
          "statuses/**/*",
          "toidentifier/**/*",
          "type-is/**/*",
          "unpipe/**/*",
          "utils-merge/**/*",
          "vary/**/*",
          "url/**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "app/node_modules/**/*",
      "app/server/**/*"
    ],
    "directories": {
      "buildResources": "assets",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "electron-log": "^5.3.2",
    "esm": "^3.2.25",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "multer": "^1.4.5-lts.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^5.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9",
    "svelte": "^5.25.2",
    "svelte-check": "^4.1.5",
    "typescript": "^5.8.2",
    "vite": "^6.2.2",
    "wait-on": "^8.0.3"
  }
}
