{
  "name": "cv-killer",
  "private": true,
  "version": "0.0.1",
  "type": "module",
  "main": "electron.cjs",
  "description": "A job application tracking system that manages your CVs, cover letters, and job applications with LaTeX document version control and customization.",
  "author": {
    "name": "Qervas",
    "email": "djmax96945147@outlook.com"
  },
  "scripts": {
    "dev:frontend": "vite dev",
    "dev:backend": "nodemon server/index.js",
    "dev": "concurrently \"npm run dev:frontend\" \"npm run dev:backend\"",
    "build": "vite build",
    "postbuild": "node scripts/copy-server.js",
    "preview": "vite preview",
    "electron": "electron .",
    "build-electron": "vite build && electron-builder"
  },
  "build": {
    "appId": "com.yourdomain.cvkiller",
    "productName": "CV Killer",
    "files": [
      "build/**/*",
      "electron.cjs",
      "server-bridge.cjs"
    ],
    "extraResources": [
      {
        "from": "server",
        "to": "app/server"
      },
      {
        "from": "server-bridge.cjs",
        "to": "app/server-bridge.cjs"
      }
    ],
    "extraFiles": [
      {
        "from": "node_modules",
        "to": "node_modules",
        "filter": [
          "express/**/*",
          "cors/**/*",
          "fs-extra/**/*",
          "uuid/**/*",
          "@types/**/*",
          "body-parser/**/*",
          "path-to-regexp/**/*",
          "accepts/**/*",
          "content-type/**/*",
          "debug/**/*",
          "depd/**/*",
          "array-flatten/**/*",
          "bytes/**/*",
          "call-bind/**/*",
          "content-disposition/**/*",
          "cookie/**/*",
          "cookie-signature/**/*",
          "destroy/**/*",
          "ee-first/**/*",
          "encodeurl/**/*",
          "escape-html/**/*",
          "etag/**/*",
          "finalhandler/**/*",
          "fresh/**/*",
          "function-bind/**/*",
          "get-intrinsic/**/*",
          "has/**/*",
          "has-symbols/**/*",
          "http-errors/**/*",
          "iconv-lite/**/*",
          "inherits/**/*",
          "ipaddr.js/**/*",
          "media-typer/**/*",
          "merge-descriptors/**/*",
          "methods/**/*",
          "mime/**/*",
          "mime-db/**/*",
          "mime-types/**/*",
          "ms/**/*",
          "negotiator/**/*",
          "object-inspect/**/*",
          "on-finished/**/*",
          "parseurl/**/*",
          "proxy-addr/**/*",
          "qs/**/*",
          "range-parser/**/*",
          "raw-body/**/*",
          "safe-buffer/**/*",
          "safer-buffer/**/*",
          "send/**/*",
          "serve-static/**/*",
          "setprototypeof/**/*",
          "side-channel/**/*",
          "statuses/**/*",
          "toidentifier/**/*",
          "type-is/**/*",
          "unpipe/**/*",
          "utils-merge/**/*",
          "vary/**/*"
        ]
      }
    ],
    "asar": true,
    "asarUnpack": [
      "node_modules/**/*"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "dist"
    },
    "mac": {
      "category": "public.app-category.productivity"
    },
    "win": {
      "target": "nsis"
    },
    "linux": {
      "target": "AppImage"
    }
  },
  "dependencies": {
    "chokidar": "^4.0.3",
    "cors": "^2.8.5",
    "esm": "^3.2.25",
    "express": "^4.21.2",
    "fs-extra": "^11.3.0",
    "multer": "^1.4.5-lts.2",
    "uuid": "^11.1.0"
  },
  "devDependencies": {
    "@sveltejs/adapter-auto": "^5.0.0",
    "@sveltejs/adapter-static": "^3.0.8",
    "@sveltejs/kit": "^2.20.2",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "concurrently": "^9.1.2",
    "electron": "^35.0.3",
    "electron-builder": "^25.1.8",
    "nodemon": "^3.1.9",
    "svelte": "^5.25.2",
    "svelte-check": "^4.1.5",
    "typescript": "^5.8.2",
    "vite": "^6.2.2"
  }
}
